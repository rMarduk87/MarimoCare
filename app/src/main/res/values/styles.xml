<?xml version="1.0" encoding="utf-8"?>
<resources>
    !-- Stile con angoli morbidi e consistenti -->
    <style name="Shape.Marimo.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Shape.Marimo.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.Marimo.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Bottoni -->
    <style name="Widget.Marimo.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card -->
    <style name="Widget.Marimo.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:background">@color/marimo_surface</item>
    </style>

    <!-- TextField -->
    <style name="Widget.Marimo.TextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/marimo_primary</item>
        <item name="hintTextColor">@color/marimo_text_hint</item>
        <item name="android:textColor">@color/marimo_text_primary</item>
    </style>

    <!-- Titoli -->
    <style name="Text.Marimo.Title" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/marimo_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Testo corpo -->
    <style name="Text.Marimo.Body" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/marimo_text_secondary</item>
    </style>

    <style name="NoDataTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
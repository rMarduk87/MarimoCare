<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FFFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <!-- Logo -->
            <ImageView
                android:background="@drawable/bg_button_green"
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_water_drop_white"
                app:tint="@color/marimo_surface"
                android:contentDescription="@string/app_name" />

            <!-- Titoli -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/titleMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marimo Care"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/titleSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Change Tracker"
                    android:textColor="@color/marimo_primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Pulsanti Tablet: Dashboard (verde) + Add Marimo (bianco) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDashboardHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:drawableStart="@drawable/ic_home"
                    android:drawablePadding="8dp"
                    android:text="Dashboard"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_green"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:id="@+id/btnAddMarimoHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginStart="12dp"
                    android:text="+ Add Marimo"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_button_white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Header --> <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="ðŸŒ¿ Marimo Care Dashboard"
            android:textColor="#0B6E4F"
            android:textSize="22sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Keep track of your marimo moss balls and never miss a water change again!"
                android:textColor="#555"
                android:textSize="14sp" /> <!-- Tip Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                app:cardBackgroundColor="#E8FFF5"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="ðŸ’¡ Marimo Tip: Use filtered or distilled water. Chlorinated water can harm marimos."
                    android:textColor="#0B6E4F"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView> <!-- Summary Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:useDefaultMargins="true"> <!-- Total Marimos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#E8FFF5"
                    android:backgroundTint="#E8FFF5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Total"
                        android:textColor="#0B6E4F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#0B6E4F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Overdue -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFEDED"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Overdue"
                        android:textColor="#D9534F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#D9534F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Due Soon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFF9E6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Due Soon"
                        android:textColor="#E1A500"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="0"
                        android:textColor="#E1A500"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout> <!-- Section Title -->
            <TextView
                android:paddingBottom="8dp"
                android:text="Your Marimos"
                android:textColor="@color/marimo_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/> <!-- RecyclerView per le card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMarimos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" /> <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMarimo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="+ Add Marimo"
                android:textColor="#0B6E4F"
                app:strokeColor="#0B6E4F"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
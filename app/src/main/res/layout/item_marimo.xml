<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMarimo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:background="@drawable/bg_card_marimo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgMarimoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_water_drop"
                android:padding="8dp"
                android:background="@drawable/bg_circle_green"
                android:contentDescription="@string/img" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/txtName"
                    android:text="@string/mochi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtFrequency"
                    android:text="@string/changes_every_14_days"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_days_left_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_clock"
                    app:tint="#0A9A67"
                    android:contentDescription="@string/img"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/txtDaysLeft"
                    android:text="@string/_12_days_left"
                    android:textSize="12sp"
                    android:textColor="#0A9A67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- DATE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="@string/last_changed"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtLastChange"
                    android:text="@string/oct_15_2025"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="@string/next_change"
                    android:textSize="13sp"
                    android:textColor="#777777"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtNextChange"
                    android:text="@string/oct_29_2025"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#0A9A67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- NOTES LABEL -->
        <TextView
            android:text="@string/notes"
            android:textSize="13sp"
            android:textColor="#777777"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- NOTES BOX -->
        <TextView
            android:id="@+id/txtNotes"
            android:text="@string/my_first_marimo_very_round_and_bouncy"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:background="@drawable/bg_notes_box"
            android:paddingStart="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="14dp"
            tools:ignore="RtlSymmetry">

            <Button
                android:id="@+id/btnWaterChanged"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.7"
                android:text="@string/water_changed"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_primary"
                android:drawableLeft="@drawable/ic_water_drop_white_mini"
                android:drawablePadding="8dp"
                tools:ignore="ButtonStyle,RtlHardcoded" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.30"
                android:layout_marginStart="10dp"
                android:text="@string/edit"
                android:textAllCaps="false"
                android:textColor="@color/marimo_black"
                app:backgroundTint="@null"
                android:background="@drawable/bg_btn_edit_border"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

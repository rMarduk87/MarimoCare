<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Titolo e sottotitolo -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/img"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_water_drop_green" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDialogSubtitle"
                android:layout_gravity="center"
                android:text="@string/marimo_qr_code"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6A6A6A"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Pulsante di chiusura -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/img"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_24"
            app:tint="#000000"/>
    </LinearLayout>

    <!-- Spaziatura -->
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/edittext_outline">

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/qrCode"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:contentDescription="@string/img"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_water_drop_green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/qrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/print_this_code_temp"
        android:textSize="14sp"
        android:textColor="#6A6A6A"
        android:layout_marginTop="2dp" />

    <!-- Pulsante azioni QR -->
    <Button
        android:id="@+id/btnQrActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_qr"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>
</LinearLayout>
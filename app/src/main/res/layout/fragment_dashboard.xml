<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FFFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            android:id="@+id/include1" layout="@layout/header">
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Header --> <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="@string/marimo_care_dashboard"
            android:textColor="#0B6E4F"
            android:textSize="22sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="@string/keep_track_of_your_marimo_moss_balls_and_never_miss_a_water_change_again"
                android:textColor="#555"
                android:textSize="14sp" /> <!-- Tip Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tipsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#F3FFFA"
                app:strokeColor="@color/marimo_item_edit_board"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TITLE ROW -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_tip_icon_circle"
                            android:padding="4dp"
                            android:contentDescription="@string/img"
                            android:src="@drawable/ic_tip_lightbulb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/marimo_tip_title"
                            android:textColor="#347156"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- VIEWPAGER + ARROWS -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/tipsPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:clipToPadding="false"
                            android:clipToOutline="false" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <ImageButton
                            android:id="@+id/arrowLeft"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:padding="4dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/img"
                            android:src="@drawable/ic_arrow_left" />

                        <!-- DOTS -->
                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dotsIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:dotsSize="6dp"
                            app:dotsSpacing="6dp"
                            app:dotsColor="#a7f3d0"
                            app:selectedDotColor="#10b981"/>

                        <ImageButton
                            android:id="@+id/arrowRight"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="4dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/img"
                            android:src="@drawable/ic_arrow_right" />

                    </RelativeLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <GridLayout
                android:id="@+id/grid_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:useDefaultMargins="true">

                <!-- TOTAL -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_counter_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:strokeColor="@color/marimo_item_board"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_water_drop_green"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"
                            android:padding="8dp"
                            android:contentDescription="@string/img"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_mask_total"/>

                        <TextView
                            android:text="@string/_3"
                            android:textColor="#0B6E4F"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@string/total"
                            android:textColor="#0B6E4F"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- OVERDUE -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_counter_overdue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:strokeColor="@color/marimo_peach"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_warning_triangle_red"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"
                            android:padding="8dp"
                            android:contentDescription="@string/img"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_mask_overdue"/>

                        <TextView
                            android:text="@string/_3"
                            android:textColor="@color/marimo_red"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@string/overdue"
                            android:textColor="@color/marimo_red"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- DUE SOON -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_counter_due"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:strokeColor="@color/marimo_light_yellow"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calendar_orange"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="8dp"
                            android:padding="8dp"
                            android:contentDescription="@string/img"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_mask_soon"/>

                        <TextView
                            android:text="@string/_0"
                            android:textColor="@color/marimo_orange"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@string/due_soon"
                            android:textColor="@color/marimo_orange"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
            <GridLayout
                android:id="@+id/grid_status_alternative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:useDefaultMargins="true"
                android:visibility="gone"> <!-- Total Marimos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#E8FFF5"
                    android:backgroundTint="#E8FFF5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/total"
                        android:textColor="#0B6E4F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/_3"
                        android:textColor="#0B6E4F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Overdue -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFEDED"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/overdue"
                        android:textColor="#D9534F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/_3"
                        android:textColor="#D9534F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Due Soon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFF9E6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="@string/due_soon"
                        android:textColor="#E1A500"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/_0"
                        android:textColor="#E1A500"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout> <!-- Section Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">
                <TextView
                    android:text="@string/your_marimos"
                    android:textColor="@color/marimo_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnAddMarimo"
                    android:layout_marginStart="125dp"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/add_marimo"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_btn_primary"
                    />
            </LinearLayout>
             <!-- RecyclerView per le card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMarimos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/emptyListLabel"
                style="@style/NoDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:visibility="gone" />

            <include
                android:id="@+id/include2" layout="@layout/footer">
            </include>

        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>
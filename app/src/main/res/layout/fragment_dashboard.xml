<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FFFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER (fisso, tutta larghezza) -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="4dp">

        <!-- Logo -->
        <ImageView
            android:background="@drawable/bg_button_green"
            android:id="@+id/appLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_water_drop_white"
            app:tint="@color/marimo_surface"
            android:padding="8dp"
            android:contentDescription="@string/app_name" />

        <!-- Titoli -->
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/titleMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marimo Care"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titleSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Change Tracker"
                    android:textColor="@color/marimo_primary"
                    android:textSize="13sp" />
            </LinearLayout>

        <!-- Pulsante Casa (tondo verde) -->
        <ImageButton
            android:id="@+id/btnDashboardHeader"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_green"
            android:src="@drawable/ic_home"
            app:tint="@android:color/white"
            android:contentDescription="@string/dashboard" />

        <!-- FAB bianco + icona nera (mini) -->
            <ImageButton
                android:id="@+id/btnAddMarimoHeader"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_white"
                android:src="@drawable/ic_add"
                app:tint="@android:color/darker_gray"
                android:contentDescription="@string/add_marimo" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Header --> <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="ðŸŒ¿ Marimo Care Dashboard"
            android:textColor="#0B6E4F"
            android:textSize="22sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Keep track of your marimo moss balls and never miss a water change again!"
                android:textColor="#555"
                android:textSize="14sp" /> <!-- Tip Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                app:cardBackgroundColor="#E8FFF5"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="ðŸ’¡ Marimo Tip: Use filtered or distilled water. Chlorinated water can harm marimos."
                    android:textColor="#0B6E4F"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView> <!-- Summary Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="1"
                android:useDefaultMargins="true"> <!-- Total Marimos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#E8FFF5"
                    android:backgroundTint="#E8FFF5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Total"
                        android:textColor="#0B6E4F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#0B6E4F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Overdue -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFEDED"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Overdue"
                        android:textColor="#D9534F"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#D9534F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout> <!-- Due Soon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="#FFF9E6"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Due Soon"
                        android:textColor="#E1A500"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="0"
                        android:textColor="#E1A500"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout> <!-- Section Title -->
            <TextView
                android:paddingBottom="8dp"
                android:text="Your Marimos"
                android:textColor="@color/marimo_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/> <!-- RecyclerView per le card -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMarimos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/emptyListLabel"
                style="@style/NoDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:visibility="gone" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMarimo"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="+ Add Marimo"
                android:textColor="#0B6E4F"
                app:strokeColor="#0B6E4F"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
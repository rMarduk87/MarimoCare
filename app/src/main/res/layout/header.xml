<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:elevation="4dp">

<ImageView
    android:background="@drawable/bg_button_green"
    android:id="@+id/appLogo"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_water_drop_white"
    app:tint="@color/marimo_surface"
    android:padding="8dp"
    android:contentDescription="@string/app_name" />


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingStart="10dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_change_tracker"
        android:textColor="@color/marimo_text"
        android:textSize="13sp" />
</LinearLayout>

    <Button
        android:id="@+id/btnDashboardHeader"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:drawableTop="@drawable/ic_dashboard"
        android:drawableTint="@color/marimo_item_green"
        android:textAllCaps="false"
        android:textColor="@color/marimo_item_green"
        app:backgroundTint="@null"
        android:background="@drawable/bg_button_light_green"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="ButtonStyle,RtlHardcoded" />

    <Button
        android:id="@+id/btnAddMarimoHeader"
        android:layout_width="96dp"
        android:layout_height="42dp"
        android:layout_marginStart="9dp"
        android:text="@string/add_marimo"
        android:textAllCaps="false"
        android:drawableTop="@drawable/ic_add"
        android:drawableTint="@color/marimo_add_icon"
        android:background="@drawable/bg_button_white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:backgroundTint="@null"
        tools:ignore="ButtonStyle" />
</LinearLayout>
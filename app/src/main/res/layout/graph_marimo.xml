<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/graph_marimo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeColor="#D8F5E0"
    app:strokeWidth="1dp"
    android:backgroundTint="#F7FFFB">

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Titolo + Icona -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_trending_up"
                app:tint="#00A676"
                android:contentDescription="@string/img"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                android:layout_marginStart="8dp"
                android:text="@string/water_change_trend"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="@string/actual_water_changes_over_the_last_6_months"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:textColor="#6D6D6D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/waterTrendChart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

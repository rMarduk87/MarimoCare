<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_marimo_kuju"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111111" />

        <!-- Subtitle / body -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/are_you_sure_you_want_to_delete_this_marimo_this_action_cannot_be_undone"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel: outlined button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:insetLeft="12dp"
                android:insetRight="12dp"
                android:text="@string/cancel"
                android:textColor="@color/marimo_dark"
                android:textAllCaps="false"
                android:layout_marginEnd="12dp"/>

            <!-- Delete: filled red button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="?attr/materialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/delete"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/marimo_red"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MarimoCare" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Colori principali -->
        <item name="colorPrimary">@color/marimo_primary</item>
        <item name="colorOnPrimary">@color/marimo_surface</item>

        <item name="colorSurface">@color/marimo_surface</item>
        <item name="colorError">@color/marimo_red</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/marimo_text_primary</item>
        <item name="android:textColorSecondary">@color/marimo_text_secondary</item>

        <!-- Componenti Material -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Marimo.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Marimo.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Marimo.Large</item>

        <item name="materialButtonStyle">@style/Widget.Marimo.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Marimo.Card</item>
        <item name="textInputStyle">@style/Widget.Marimo.TextField</item>

        <!-- Tipografia -->
        <item name="textAppearanceBodyMedium">@style/Text.Marimo.Body</item>
        <item name="textAppearanceHeadlineMedium">@style/Text.Marimo.Title</item>
    </style>

</resources>